<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Material.Blue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimaryColor</item>
        <item name="colorPrimaryVariant">@color/bluePrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/blueSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bluePrimaryDarkColor</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.Material.Red" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/redPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/redSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/redPrimaryDarkColor</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="TextInpLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="helperTextTextColor">@color/bluePrimaryColor</item>
        <item name="boxStrokeColor">@color/redSecondaryColor</item>
    </style>

</resources>